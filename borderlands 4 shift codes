    <script>
        // Countdown Timer
        function updateCountdown() {
            const targetDate = new Date('September 30, 2023 12:00:00').getTime();
            const now = new Date().getTime();
            const distance = targetDate - now;
            
            if (distance > 0) {
                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);
                
                document.getElementById('days').textContent = days.toString().padStart(2, '0');
                document.getElementById('hours').textContent = hours.toString().padStart(2, '0');
                document.getElementById('minutes').textContent = minutes.toString().padStart(2, '0');
                document.getElementById('seconds').textContent = seconds.toString().padStart(2, '0');
            } else {
                document.querySelector('.countdown').innerHTML = '<h3>New codes coming soon!</h3>';
            }
        }
        
        setInterval(updateCountdown, 1000);
        updateCountdown();
        
        // Copy Code Function
        function copyCode(element) {
            const text = element.textContent;
            navigator.clipboard.writeText(text).then(() => {
                const notification = document.getElementById('notification');
                notification.textContent = 'Code copied to clipboard!';
                notification.classList.add('show');
                
                setTimeout(() => {
                    notification.classList.remove('show');
                }, 3000);
            });
        }
        
        // Email Form Submission
        document.querySelectorAll('.email-form').forEach(form => {
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                const emailInput = this.querySelector('.email-input');
                const email = emailInput.value;
                
                // Here you would normally send the email to your server
                const notification = document.getElementById('notification');
                notification.textContent = 'Thanks! We\'ll notify you about new codes.';
                notification.style.backgroundColor = '#4CAF50';
                notification.classList.add('show');
                
                emailInput.value = '';
                
                setTimeout(() => {
                    notification.classList.remove('show');
                    notification.style.backgroundColor = '';
                }, 3000);
            });
        });
        
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });
        
        // Unlock Codes Functionality
        const accessButtons = document.querySelectorAll('#accessAllCodesBtn, #unlockCodesBtn');
        const lockedSection = document.getElementById('lockedSection');
        const codesSection = document.getElementById('codesSection');
        
        accessButtons.forEach(button => {
            button.addEventListener('click', function() {
                // Hide locked section, show codes section
                lockedSection.style.display = 'none';
                codesSection.style.display = 'block';
                
                // Scroll to codes section
                window.scrollTo({
                    top: codesSection.offsetTop - 80,
                    behavior: 'smooth'
                });
                
                // Show notification
                const notification = document.getElementById('notification');
                notification.textContent = 'All SHiFT codes unlocked!';
                notification.style.backgroundColor = '#4CAF50';
                notification.classList.add('show');
                
                setTimeout(() => {
                    notification.classList.remove('show');
                    notification.style.backgroundColor = '';
                }, 3000);
            });
        });
        
        // Add subtle animation to the main CTA button
        const mainCta = document.querySelector('.main-cta-button');
        setInterval(() => {
            mainCta.style.boxShadow = `0 0 20px rgba(255, 107, 0, 0.7), 0 0 30px rgba(255, 216, 0, 0.5)`;
            setTimeout(() => {
                mainCta.style.boxShadow = `0 0 20px rgba(255, 107, 0, 0.7)`;
            }, 1000);
        }, 3000);
    </script>
